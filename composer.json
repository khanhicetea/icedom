{
    "name": "icetea/icedom",
    "description": "PHP pure and simple VDOM",
    "keywords": [
        "IceTea",
        "icedom"
    ],
    "homepage": "https://github.com/icetea/icedom",
    "license": "MIT",
    "authors": [
        {
            "name": "KhanhIceTea",
            "email": "khanhicetea@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "files": [
            "src/generated_html_tags.php"
        ],
        "psr-4": {
            "IceTea\\IceDOM\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IceTea\\IceDOM\\Tests\\": "tests"
        }
    },
    "scripts": {
        "devzone": "php -S localhost:8000 drafts/devzone/index.php",
        "test": "XDEBUG_MODE=coverage vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "gen-tags": "./bin/vdom_tags 'IceTea\\IceDOM\\HtmlNode' > ./src/generated_html_tags.php"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
